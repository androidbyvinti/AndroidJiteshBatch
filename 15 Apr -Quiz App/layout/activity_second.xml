<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bmpl.quizapp.SecondActivity"
    android:orientation="vertical"
    android:background="@color/colorBlack">

    <ImageView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/quiz"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <Button
        android:id="@+id/cButton"
        style="@style/CustomButton"
        android:text="C"
        android:background="@color/colorLightBlue1"
        android:onClick="buttonClicked"/>

    <Button
        android:id="@+id/cPlusButton"
        android:background="@color/colorLightBlue2"
        style="@style/CustomButton"
        android:text="C++"
        android:onClick="buttonClicked"/>

    <Button
        android:id="@+id/androidButton"
        android:background="@color/colorLightBlue3"
        android:text="Android"
        style="@style/CustomButton"
        android:onClick="buttonClicked"/>

    <Button
        android:id="@+id/pythonButton"
        android:background="@color/colorLightBlue4"
        android:text="Python"
        style="@style/CustomButton"
        android:onClick="buttonClicked"/>

    <Button
        android:id="@+id/javaButton"
        android:background="@color/colorLightBlue5"
        android:text="Java"
        style="@style/CustomButton"
        android:onClick="buttonClicked"/>

    <Button
        android:id="@+id/dsButton"
        android:background="@color/colorLightBlue6"
        android:text="DS"
        style="@style/CustomButton"
        android:onClick="buttonClicked"/>

    </LinearLayout>

</LinearLayout>
